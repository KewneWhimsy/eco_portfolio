---
// Imports
import "../styles/global.css";
import Header from "./header.astro";
import Footer from "./footer.astro";
import { ClientRouter } from "astro:transitions";
import HreflangLinks from "../components/HreflangLinks.astro";

// Props du composant
export interface Props {
  title: string;
  description: string;
  lang: string;
  isEcoMode?: boolean;
}

const {
  title,
  description,
  lang: requestedLang = "fr",
  isEcoMode = false,
} = Astro.props;

// Détection de la langue pour mettre les bonnes meta
const langAttributes = {
  fr: {
    htmlLang: "fr",
    ogLocale: "fr_FR",
  },
  en: {
    htmlLang: "en",
    ogLocale: "en_US",
  },
  de: {
    htmlLang: "de",
    ogLocale: "de_DE",
  },
};

// Vérifier si la langue demandée est supportée, sinon utiliser le français
const lang = requestedLang in langAttributes ? requestedLang : "fr";
const { htmlLang, ogLocale } =
  langAttributes[lang as keyof typeof langAttributes];
---

<!doctype html>
<html lang={htmlLang} class={isEcoMode ? "eco-mode" : ""}>
  <head>
    <!-- Styles critiques inlinés -->
    <style>
      /* Variables essentielles */
      :root {
        --color-primary: #1a1a1a;
        --color-secondary: #2a2a2a;
        --color-accent: #4da34d;
        --color-link: #56de56;
        --color-text: #e0e0e0;
        --color-text-muted: #a0a0a0;
        --color-accent-hover: #5ccc5c;
        --color-accent-light: rgba(58, 119, 58, 0.2);
        --transition-standard: 250ms ease-in-out;
      }
    
      /* Styles de base */
      html {
        color: var(--color-text);
        font-family: system-ui, sans-serif;
        scroll-behavior: smooth;
      }
    
      body {
        background-color: var(--color-primary);
        margin: 0;
      }
    
      /* Header et navigation */
      .titleName {
        color: var(--color-text);
        text-decoration: none;
        font-weight: bold;
        font-size: 1.5rem;
        transition: color var(--transition-standard);
      }
    
      .titleName .titlePoint {
        color: var(--color-accent);
      }
    
      .titleName:hover {
        color: var(--color-accent-hover);
      }
    
      .nav-link {
        text-decoration: none;
        transition: color var(--transition-standard);
      }
      
      .nav-link-active {
        color: var(--color-accent);
        font-weight: 500;
      }
    
      .nav-link:hover {
        color: var(--color-accent-hover);
      }
    
      /* Boutons et CTAs */
      .cta-button {
        background-color: var(--color-accent);
        color: var(--color-primary);
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        display: inline-block;
        transition: background-color var(--transition-standard),
          transform var(--transition-standard);
      }
    
      .cta-button:hover {
        background-color: var(--color-accent-hover);
        transform: translateY(-1px);
      }
    
      .btn-secondary {
        border: 1px solid var(--color-accent);
        color: var(--color-accent-hover);
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        transition: background-color var(--transition-standard),
          color var(--transition-standard), transform var(--transition-standard);
      }
    
      .btn-secondary:hover {
        background-color: var(--color-accent-light);
        color: var(--color-text);
        transform: translateY(-1px);
      }
    
      .btn-eco {
        color: var(--color-accent);
        transition: background-color var(--transition-standard),
          color var(--transition-standard);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        border: 1px solid var(--color-accent);
        font-size: 0.875rem;
      }
    
      /* Animation de typewriter pour le titre principal */
      .typewriter-part1,
      .typewriter-part2 {
        display: inline-block;
        overflow: hidden;
      }
    
      .typewriter-text-base,
      .typewriter-text-highlight {
        display: inline-block;
        overflow: hidden;
        white-space: nowrap;
        width: 0;
      }
    
      .typewriter-text-base {
        border-right: 0.15em solid var(--color-accent);
        animation: typing1 1.5s steps(20, end) forwards, blink-caret 0.75s step-end 4,
          hide-caret 0.1s ease-in forwards 1.5s;
      }
    
      .typewriter-text-highlight {
        border-right: 0.15em solid var(--color-accent);
        opacity: 0;
        animation: typing2 1.5s steps(20, end) forwards 1.6s,
          blink-caret 0.75s step-end 4 1.6s, hide-caret 0.1s ease-in forwards 5s;
      }
    
      /* Classe pour l'animation de scale up */
      .scale-up {
        opacity: 0;
        transform: scale(0.8);
        transition: opacity 0.6s ease-out,
          transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
      }
    
      /* Classe pour déclencher l'animation */
      .scale-up.visible {
        opacity: 1;
        transform: scale(1);
        animation: scaleUp 0.6s forwards cubic-bezier(0.2, 0.8, 0.2, 1);
      }
    
      /* Classes utilitaires essentielles */
      .container {
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
      }
    
      .flex {
        display: flex;
      }
    
      .flex-col {
        flex-direction: column;
      }
    
      .items-center {
        align-items: center;
      }
    
      .justify-between {
        justify-content: space-between;
      }
    
      .text-accent {
        color: var(--color-accent);
      }
    
      .text-light {
        color: var(--color-accent-hover);
      }
    
      .font-bold {
        font-weight: 700;
      }
    
      .text-3xl {
        font-size: 1.875rem;
        line-height: 2.25rem;
      }
    
      .mb-4 {
        margin-bottom: 1rem;
      }
    
      .mb-6 {
        margin-bottom: 1.5rem;
      }
    
      .gap-4 {
        gap: 1rem;
      }
    
      .p-4 {
        padding: 1rem;
      }
    
      .rounded-lg {
        border-radius: 0.5rem;
      }
    
      .bg-secondary {
        background-color: var(--color-secondary);
      }
    
      .w-full {
        width: 100%;
      }
    
      .h-auto {
        height: auto;
      }
    
      .object-cover {
        object-fit: cover;
      }
    
      /* Keyframes */
      @keyframes typing1 {
        from { width: 0; opacity: 1; }
        to { width: 100%; opacity: 1; }
      }
    
      @keyframes typing2 {
        from { width: 0; opacity: 1; }
        to { width: 100%; opacity: 1; }
      }
    
      @keyframes blink-caret {
        from, to { border-color: var(--color-accent); }
        50% { border-color: transparent; }
      }
    
      @keyframes hide-caret {
        to { border-color: transparent; }
      }
    
      @keyframes scaleUp {
        0% { transform: scale(0.8); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
      }
    
      /* Media queries critiques */
      @media (min-width: 768px) {
        .md\:flex-row {
          flex-direction: row;
        }
        
        .md\:w-2\/3 {
          width: 66.666667%;
        }
        
        .md\:w-1\/3 {
          width: 33.333333%;
        }
    
        .md\:text-4xl {
          font-size: 2.25rem;
          line-height: 2.5rem;
        }
        
        .md\:py-12 {
          padding-top: 3rem;
          padding-bottom: 3rem;
        }
      }
    </style>
  
  <!-- Charger le reste du CSS de façon asynchrone -->
  <link rel="preload" href="/_astro/about.CIMEQNOR.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="/_astro/about.CIMEQNOR.css"></noscript>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Josselin HANEL" />

    <!-- Métadonnées pour SEO -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={ogLocale} />
    <link rel="icon" href="/jpointr.png" type="image/png">

    <!-- Préchargement/préconnexion pour performances -->
    <link rel="preconnect" href="https://cloudflare.com" crossorigin />

    <!-- Balises hreflang pour le SEO multilingue -->
    <HreflangLinks />

    <!-- Pas de JavaScript pour la détection du mode éco, on utilise uniquement l'URL -->

    <title>{title}</title>

    <!-- Ajouter Client Router uniquement si on n'est pas en mode éco -->
    {!isEcoMode && 
      <script>
        // Charge le ClientRouter après que la page soit chargée
        document.addEventListener('DOMContentLoaded', () => {
          import('astro:transitions').then(module => {
            // Le ClientRouter sera chargé dynamiquement
            const { ClientRouter } = module;
            document.body.appendChild(document.createElement('client-router'));
          });
        });
      </script>
    }

    <!-- Script pour corriger la navigation avec ClientRouter -->
    {!isEcoMode && (
      <script>
        // Fonction pour mettre à jour tous les liens de navigation avec la langue actuelle
        function updateNavigationLinks() {
          // Détecte la langue actuelle depuis l'URL
          const path = window.location.pathname;
          const langMatch = path.match(/^\/([a-z]{2})(\/|$)/);
          const currentLang = langMatch ? langMatch[1] : 'fr';
      
          // Met à jour le lien du logo
          const logoLink = document.querySelector('a.titleName');
          if (logoLink) {
            const homeUrl = `/${currentLang}`;
            logoLink.setAttribute('href', homeUrl);
          }
        }   

        // Exécute la mise à jour après chaque navigation
        document.addEventListener('astro:page-load', updateNavigationLinks);
    
        // Exécute également au chargement initial
        document.addEventListener('DOMContentLoaded', updateNavigationLinks);
      </script>
    )}
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="mx-2 md:mx-4">
      <Header />
    </header>

    <main class="flex-1">
      <!-- Le contenu principal sera inséré ici -->
      <slot />
    </main>

    <footer class="mx-4">
      <Footer transition-persist="site-footer" />
    </footer>

    <!-- Compteur d'économie de données en mode éco (version statique) -->
    {
      isEcoMode && (
        <div style="display: none;" class="fixed bottom-4 right-4 bg-secondary p-2 rounded text-xs">
          <p>~1 MB économisé en mode éco</p>
        </div>
      )
    }
  </body>
</html>
