// Utiliser la langue demandée ou français par défaut
const t = content[lang] || content.fr;

// Compétences à afficher
const skills = [
  {
    category: "Frontend",
    items: ["Astro", "CSS Pro", "Tailwind", "TypeScript", "HTMX", "Alpine.js"],
  },
  { category: "Backend", items: ["Express", "WebSocket", "Elixir", "Phoenix"] },
  {
    category:
      lang === "fr"
        ? "Bases de données"
        : lang === "en"
          ? "Databases"
          : "Datenbanken",
    items: ["PostgreSQL", "MongoDB", "PostgREST", "Ecto"],
  },
  {
    category: lang === "fr" ? "Outils" : lang === "en" ? "Tools" : "Werkzeuge",
    items: ["Git", "Docker", "VS Code", "Lighthouse", "Claude"],
  },
  {
    category:
      lang === "fr"
        ? "Méthodologies"
        : lang === "en"
          ? "Methodologies"
          : "Methoden",
    items: [
      lang === "fr"
        ? "Accessibilité"
        : lang === "en"
          ? "Accessibility"
          : "Barrierefreiheit",
      "Performance",
      lang === "fr"
        ? "Éco-conception"
        : lang === "en"
          ? "Eco-design"
          : "Öko-Design",
      "UX/UI",
