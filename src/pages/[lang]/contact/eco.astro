---
// Import du layout avec mode éco activé
import Layout from '../../../layouts/layout.astro';

// Récupérer le paramètre de langue depuis l'URL
export function getStaticPaths() {
  return [
    { params: { lang: 'fr' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } }
  ];
}

const lang = Astro.params.lang as 'fr' | 'en' | 'de';

// Contenu traduit pour chaque langue
const content = {
  fr: {
    title: 'Josselin HANEL - Contact (Mode Éco)',
    description: 'Version éco-responsable de ma page de contact, avec une empreinte carbone minimale.',
    contactTitle: 'Me contacter',
    contactIntro: "Vous avez un projet en tête ou une question ? Contactez-moi par email ou via ce formulaire simplifié.",
    nameLabel: 'Votre nom',
    emailLabel: 'Votre email',
    messageLabel: 'Message',
    submitButton: 'Envoyer',
    availabilityTitle: 'Disponibilité',
    availabilityText: 'Je suis actuellement disponible pour des missions freelance à Rennes, Nantes, Berlin ou en télétravail.',
    emailMe: 'M\'envoyer un email',
    directEmail: 'contact@josselinhanel.com',
    ecoModeTitle: 'Mode Éco activé',
    ecoModeText: 'Vous consultez actuellement la version ultra-légère de mon portfolio.'
  },
  en: {
    title: 'Josselin HANEL - Contact (Eco Mode)',
    description: 'Eco-friendly version of my contact page, with minimal carbon footprint.',
    contactTitle: 'Contact me',
    contactIntro: "Do you have a project in mind or a question? Contact me by email or through this simplified form.",
    nameLabel: 'Your name',
    emailLabel: 'Your email',
    messageLabel: 'Message',
    submitButton: 'Send',
    availabilityTitle: 'Availability',
    availabilityText: 'I am currently available for freelance work in Rennes, Nantes, Berlin or remote work.',
    emailMe: 'Email me',
    directEmail: 'contact@josselinhanel.com',
    ecoModeTitle: 'Eco Mode activated',
    ecoModeText: 'You are currently viewing the ultra-lightweight version of my portfolio.'
  },
  de: {
    title: 'Josselin HANEL - Kontakt (Öko-Modus)',
    description: 'Umweltfreundliche Version meiner Kontaktseite mit minimalem CO2-Fußabdruck.',
    contactTitle: 'Kontaktieren Sie mich',
    contactIntro: "Haben Sie ein Projekt im Sinn oder eine Frage? Kontaktieren Sie mich per E-Mail oder über dieses vereinfachte Formular.",
    nameLabel: 'Ihr Name',
    emailLabel: 'Ihre E-Mail',
    messageLabel: 'Nachricht',
    submitButton: 'Senden',
    availabilityTitle: 'Verfügbarkeit',
    availabilityText: 'Ich bin derzeit verfügbar für Freiberufliche Arbeit in Rennes, Nantes, Berlin oder für Remote-Arbeit.',
    emailMe: 'E-Mail senden',
    directEmail: 'contact@josselinhanel.com',
    ecoModeTitle: 'Öko-Modus aktiviert',
    ecoModeText: 'Sie sehen gerade die ultraleichte Version meines Portfolios.'
  }
};

// Utiliser la langue demandée ou français par défaut
const t = content[lang] || content.fr;

// Mode éco activé
const isEcoMode = true;
---

<Layout title={t.title} description={t.description} lang={lang} isEcoMode={isEcoMode}>
  <div class="container mx-auto px-4 py-6">
    <!-- Section d'introduction du mode éco -->
    <section class="py-4 border-b border-secondary mb-6">
      <h2 class="text-xl font-bold mb-2">{t.ecoModeTitle}</h2>
      <p class="mb-3">
        {t.ecoModeText}
      </p>
    </section>

    <h1 class="text-2xl font-bold mb-4 border-b border-accent pb-2">
      {t.contactTitle}
    </h1>
    
    <div class="flex flex-col gap-6">
      <!-- Informations de contact simplifiées -->
      <section class="mb-6">
        <p class="mb-4">
          {t.contactIntro}
        </p>
        
        <div class="mb-4">
          <h3 class="font-medium mb-2">{t.emailMe}</h3>
          <a href="mailto:contact@josselinhanel.com" class="text-accent hover:underline">
            {t.directEmail}
          </a>
        </div>
        
        <div class="mb-4">
          <h3 class="font-medium mb-2">{t.availabilityTitle}</h3>
          <p>{t.availabilityText}</p>
        </div>
      </section>
      
      <!-- Formulaire de contact simplifié -->
      <section>
        <form 
          action="https://formspree.io/f/xoqgeqpz" 
          method="POST"
          class="space-y-4"
        >
          <!-- Champ nom -->
          <div>
            <label for="name" class="block mb-1 font-medium">{t.nameLabel}</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              class="w-full p-2 border border-secondary bg-primary rounded-md"
              required
            />
          </div>
          
          <!-- Champ email -->
          <div>
            <label for="email" class="block mb-1 font-medium">{t.emailLabel}</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full p-2 border border-secondary bg-primary rounded-md"
              required
            />
          </div>
          
          <!-- Champ message -->
          <div>
            <label for="message" class="block mb-1 font-medium">{t.messageLabel}</label>
            <textarea 
              id="message" 
              name="message" 
              class="w-full p-2 border border-secondary bg-primary rounded-md h-24"
              required
            ></textarea>
          </div>
          
          <!-- Bouton d'envoi -->
          <div>
            <button 
              type="submit"
              class="bg-accent text-primary px-4 py-1 rounded"
            >
              {t.submitButton}
            </button>
          </div>
        </form>
      </section>
    </div>
  </div>
</Layout>