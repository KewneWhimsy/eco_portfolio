---
// Import du layout avec mode éco activé
import Layout from '../../../layouts/layout.astro';
import { Picture } from 'astro:assets';
import jadeImage from '../../../assets/network/jade.jpeg';
import ninoImage from '../../../assets/network/nino.jpg';
import francoisImage from '../../../assets/network/francois.jpg';
import violetteImage from '../../../assets/network/violette.jpg';

export function getStaticPaths() {
  return [
    { params: { lang: "fr" } },
    { params: { lang: "en" } },
    { params: { lang: "de" } },
  ];
}

const lang = Astro.params.lang as "fr" | "en" | "de";

const content = {
  fr: {
    title: 'Josselin HANEL - Mon réseau professionnel (Mode Éco)',
    description: 'Version éco-responsable de ma page réseau, découvrez mes collaborateurs avec une empreinte carbone minimale.',
    networkTitle: 'Mon réseau professionnel',
    networkIntro: "Voici les talentueux professionnels avec qui je collabore. Si vous recherchez une équipe complète pour votre projet, n'hésitez pas à me contacter.",
    viewWork: "Voir le travail",
    contactCTA: "Vous êtes à la recherche d'une équipe complète pour votre projet ?",
    contactButton: "Discutons-en",
    ecoModeTitle: "Mode Éco activé",
    ecoModeText: "Vous consultez actuellement la version ultra-légère de mon portfolio."
  },
  en: {
    title: 'Josselin HANEL - My professional network (Eco Mode)',
    description: 'Eco-friendly version of my network page, discover my collaborators with minimal carbon footprint.',
    networkTitle: 'My professional network',
    networkIntro: "Here are the talented professionals I collaborate with. If you're looking for a complete team for your project, feel free to contact me.",
    viewWork: "View work",
    contactCTA: "Are you looking for a complete team for your project?",
    contactButton: "Let's discuss",
    ecoModeTitle: "Eco Mode activated",
    ecoModeText: "You are currently viewing the ultra-lightweight version of my portfolio."
  },
  de: {
    title: 'Josselin HANEL - Mein berufliches Netzwerk (Öko-Modus)',
    description: 'Umweltfreundliche Version meiner Netzwerkseite, entdecken Sie meine Mitarbeiter mit minimalem CO2-Fußabdruck.',
    networkTitle: 'Mein berufliches Netzwerk',
    networkIntro: "Hier sind die talentierten Fachleute, mit denen ich zusammenarbeite. Wenn Sie nach einem kompletten Team für Ihr Projekt suchen, können Sie mich gerne kontaktieren.",
    viewWork: "Arbeit ansehen",
    contactCTA: "Suchen Sie nach einem kompletten Team für Ihr Projekt?",
    contactButton: "Lassen Sie uns darüber sprechen",
    ecoModeTitle: "Öko-Modus aktiviert",
    ecoModeText: "Sie sehen gerade die ultraleichte Version meines Portfolios."
  }
};

const t = content[lang] || content.fr;

// Collaborateurs avec images mais descriptions simplifiées
const collaborators = [
  {
    name: 'Nino Leskargo',
    image: ninoImage,
    title: lang === 'fr' ? 'Tatoueur & Illustrateur' :
           lang === 'en' ? 'Tattoo Artist & Illustrator' :
           'Tätowierer & Illustrator',
    description: lang === 'fr' ?
      'Nino combine un style unique mêlant réalisme et esthétique graff/cartoon dans ses tatouages et illustrations.' :
      lang === 'en' ?
      'Nino blends precise realism with graffiti/cartoon aesthetics in his tattoos and illustrations.' :
      'Nino kombiniert Realismus mit Graffiti- und Cartoon-Ästhetik in seinen Tattoos und Illustrationen.',
    skills: 'Tattoo Art, 2D Illustration, Graffiti, Urban Art',
    portfolio: 'https://www.instagram.com/leskargo__/'
  },
  {
    name: 'Jade Ounaphom',
    image: jadeImage,
    title: lang === 'fr' ? 'Designer UI/UX & Créatrice audiovisuelle' : 
           lang === 'en' ? 'UI/UX Designer & Audiovisual Creator' : 
           'UI/UX Designer & Audiovisuelle Gestalterin',
    description: lang === 'fr' ? 
      'Jade apporte une vision unique aux projets numériques grâce à sa double compétence en design et en création audiovisuelle.' : 
      lang === 'en' ? 
      'Jade brings a unique vision to digital projects thanks to her dual expertise in design and audiovisual creation.' : 
      'Jade bringt mit ihrer Doppelkompetenz in Design und audiovisueller Gestaltung eine einzigartige Vision in digitale Projekte ein.',
    skills: 'UI/UX Design, Figma, Adobe CC, Motion Design',
    portfolio: 'https://jadephom.myportfolio.com/'
  },
  {
    name: 'François Bourdin',
    image: francoisImage,
    title: lang === 'fr' ? 'Character Designer & Concept Artist' : 
           lang === 'en' ? 'Character Designer & Concept Artist' : 
           'Character Designer & Concept Artist',
    description: lang === 'fr' ? 
      'François apporte une expertise artistique pointue dans le design de personnages et le design conceptuel pour l\'industrie de l\'animation.' : 
      lang === 'en' ? 
      'François brings artistic expertise in character and concept design for the animation industry.' : 
      'François bringt künstlerische Expertise im Character- und Concept Design für die Animationsindustrie mit.',
    skills: 'Character Design, Concept Art, Animation, Illustration',
    portfolio: 'https://www.artstation.com/franoisbourdin'
  },
  {
    name: 'Violette Dubois',
    image: violetteImage,
    title: lang === 'fr' ? 'Cheffe de Projet Web & Automatisation No-Code' :
           lang === 'en' ? 'Web Project Manager & No-Code Automation Expert' :
           'Web-Projektleiterin & Automatisierungsexpertin',
    description: lang === 'fr' ?
      'Violette a travaillé dans les castings TV avant de se tourner vers le web. Elle gère des projets en s\'appuyant sur des outils comme Zapier ou Notion.' :
      lang === 'en' ?
      'Violette worked in TV casting before moving into web projects. She drives projects using tools like Zapier and Notion.' :
      'Violette war im TV-Casting tätig, bevor sie ins Web wechselte. Sie steuert Projekte mit Tools wie Zapier und Notion.',
    skills: 'Gestion de projet, No-code (Zapier, Notion), Communication, Organisation',
    portfolio: 'https://www.linkedin.com/in/violette-dubois-02169b139'
  },
];

// Mode éco activé
const isEcoMode = true;
---

<Layout title={t.title} description={t.description} lang={lang} isEcoMode={isEcoMode}>
  <div class="container mx-auto px-4 py-6">
    <!-- Section d'introduction du mode éco -->
    <section class="py-4 border-b border-secondary mb-6">
      <h2 class="text-xl font-bold mb-2">{t.ecoModeTitle}</h2>
      <p class="mb-3">
        {t.ecoModeText}
      </p>
    </section>

    <h1 class="text-2xl font-bold mb-4 border-b border-accent pb-2">
      {t.networkTitle}
    </h1>
    
    <p class="mb-6">
      {t.networkIntro}
    </p>

    <!-- Grille de collaborateurs simplifiée -->
    <section class="mb-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {collaborators.map(person => (
          <div class="border border-secondary rounded-lg p-4">
            <!-- En-tête avec photo plus petite -->
            <div class="flex items-center gap-3 mb-3">
              <Picture
                src={person.image}
                width={60}
                height={60}
                alt={person.name}
                class="w-12 h-12 rounded-full object-cover"
                loading="lazy"
              />
              <div>
                <h3 class="font-bold">{person.name}</h3>
                <p class="text-accent text-sm">{person.title}</p>
              </div>
            </div>
            
            <!-- Description -->
            <p class="mb-3 text-sm">{person.description}</p>
            
            <!-- Compétences en texte simple -->
            <p class="text-text-muted text-xs mb-3">{person.skills}</p>
            
            <!-- Lien du portfolio simplifié -->
            {person.portfolio && (
              <a 
                href={person.portfolio} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="text-link text-sm"
              >
                {t.viewWork}
              </a>
            )}
          </div>
        ))}
      </div>
    </section>
    
    <!-- Section CTA simplifiée -->
    <section class="py-6 border-t border-secondary text-center">
      <h2 class="text-xl font-bold mb-4">{t.contactCTA}</h2>
      <a 
        href={`/${lang}/contact/eco`}
        class="cta-button" 
      >
        {t.contactButton}
      </a>
    </section>
  </div>
</Layout>