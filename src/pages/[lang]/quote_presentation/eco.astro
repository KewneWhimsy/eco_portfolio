      <div class="space-y-4">
        <!-- Standard (mis en premier car plus populaire) -->
        <div class="p-3 border-2 border-accent rounded-lg">
          <div class="font-semibold text-accent mb-2">
            {showcasePackages[lang].standard.title} - {
              showcasePackages[lang].standard.price
            }
          </div>
          <ul class="list-disc pl-5 text-sm space-y-1">
            {
              showcasePackages[lang].standard.features.map((feature) => (
                <li>{feature}</li>
              ))
            }
