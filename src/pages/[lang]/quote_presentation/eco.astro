      <!-- Packages visibles uniquement sur mobile -->
      <h3 class="text-lg font-semibold mb-3 text-accent">
        {
          lang === "fr"
            ? "Mes formules sites vitrines"
            : lang === "en"
              ? "My showcase website packages"
              : "Meine Präsentationswebsite-Pakete"
        }
