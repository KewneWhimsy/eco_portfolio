const { class: className = "" } = Astro.props;

const markdownClasses = [
  // Titres
  "[&>h1]:text-3xl [&>h1]:font-bold [&>h1]:text-accent [&>h1]:mb-4 [&>h1]:mt-8 [&>h1]:border-b [&>h1]:border-accent [&>h1]:pb-2",
