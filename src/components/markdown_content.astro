  "[&>h4]:text-lg [&>h4]:font-medium [&>h4]:mb-2 [&>h4]:mt-3",
  
  // Texte
  "[&>p]:mb-4 [&>p]:leading-relaxed",
  "[&>strong]:font-semibold [&>strong]:text-accent",
  
  // Listes
  "[&>ul]:list-disc [&>ul]:pl-6 [&>ul]:mb-4 [&>ul]:space-y-2",
  "[&>ol]:list-decimal [&>ol]:pl-6 [&>ol]:mb-4 [&>ol]:space-y-2",
  "[&>li]:leading-relaxed",
  
  // Liens
  "[&>a]:text-accent [&>a]:underline [&>a]:hover:text-accent-hover [&>a]:transition-colors",
  
