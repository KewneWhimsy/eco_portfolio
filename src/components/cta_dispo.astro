---
const lang = Astro.params.lang as 'fr' | 'en' | 'de';

const content = {
  fr: {
    contactButton: "Me contacter",
    ctaTitle: "Intéressé par une collaboration?",
    ctaText:
      "Je suis disponible pour des missions ponctuelles ou longue durée, des projets d'équipe ou des consultations en éco-conception web.",
  },
  en: {
    contactButton: "Contact me",
    ctaTitle: "Interested in working together?",
    ctaText:
      "I am available for short-term or long-term assignments, team projects or web eco-design consultations.",
  },
  de: {
    contactButton: "Kontakt",
    ctaTitle: "Interesse an einer Zusammenarbeit?",
    ctaText:
      "Ich bin verfügbar für kurz- oder langfristige Aufträge, Teamprojekte oder Beratungen zum Web-Öko-Design.",
  },
};
// Utiliser la langue demandée ou anglais par défaut
const t = content[lang] || content.en;
---
<section
      class="py-8 bg-secondary bg-opacity-30 rounded-lg text-center mt-8"
    >
      <h2 class="text-2xl font-bold mb-4 sm:px-1">{t.ctaTitle}</h2>
      <p class="mb-6 max-w-lg mx-auto sm:px-1">{t.ctaText}</p>
      <!-- Bouton autonome primaire -->
      <a
        href={`/${lang}/contact`}
        style="
          display: inline-block;
          padding: 8px 16px;
          background-color: var(--color-accent);
          color: var(--color-primary);
          border-radius: 4px;
          transition: transform 0.3s ease, background-color 0.3s ease;
        "
        onmouseover="this.style.transform='translateY(-1px)'; this.style.backgroundColor='var(--color-accent-hover)';"
        onmouseout="this.style.transform='translateY(0)'; this.style.backgroundColor='var(--color-accent)';"
      >
        {t.contactButton}
      </a>
    </section>