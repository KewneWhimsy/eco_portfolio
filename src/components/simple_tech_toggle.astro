---
// src/components/simple_tech_toggle.astro
// Propriétés pour gérer les traductions selon la langue
export interface Props {
  lang: 'fr' | 'en' | 'de';
}

const { lang } = Astro.props;

// Textes traduits pour le bouton selon la langue
const toggleText = {
  fr: {
    technical: "Mode technique",
    simple: "Mode simplifié"
  },
  en: {
    technical: "Technical mode",
    simple: "Simplified mode"
  },
  de: {
    technical: "Technischer Modus",
    simple: "Vereinfachter Modus"
  }
};

// Utiliser la langue demandée ou anglais par défaut
const t = toggleText[lang] || toggleText.en;
---

<div class="relative inline-block mb-2">
  <input type="checkbox" id="tech-toggle" class="sr-only peer">
  <label for="tech-toggle" class="flex items-center text-sm cursor-pointer">
    <span class="tech-mode mr-3 text-accent">{t.technical}</span>
    <div class="relative w-11 h-6 bg-secondary border border-accent rounded-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-accent after:rounded-full after:h-5 after:w-5 after:transition-all"></div>
    <span class="simple-mode ml-3 text-text-muted">{t.simple}</span>
  </label>
</div>